        <button id="modal-close" onclick="$('#modal').css('display', 'none');"><i class="fa fa-times"></i></button>
        <h2>Add a Board</h2>
        <label for="board-name-input">Name</label>
        <input type="text" value="" id="board-name-input" name="board-name-input" />
        <label for="board-description-textarea">Description</label>
        <textarea name="board-description-textarea" id="board-description-textarea"></textarea>
        <button>Save</button>
    </div>
</div>

