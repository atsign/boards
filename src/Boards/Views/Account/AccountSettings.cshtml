@model Boards.ViewModels.AccountSettingsViewModel
@{
    ViewBag.Title = "Account Settings";
}
<div class="wrap narrow">
    <div class="gencon">
        @if (!string.IsNullOrWhiteSpace(ViewBag.AppMessage))
        {
            <p class="app-message">@ViewBag.AppMessage</p>
        }
        <h1>Account Settings</h1>
        <p>Change your account password here</p>

        <form method="post" action="/settings">
            <div asp-validation-summary="ValidationSummary.ModelOnly"></div>

            <label asp-for="OldPassword">Old Password</label>
            <input type="password" id="OldPassword" asp-for="OldPassword" />
            <span asp-validation-for="OldPassword"></span>

            <label asp-for="NewPassword">New Password</label>
            <input type="password" id="NewPassword" asp-for="NewPassword" />
            <span asp-validation-for="NewPassword"></span>

            <label asp-for="PasswordConfirm">Confirm New Password</label>
            <input type="password" id="PasswordConfirm" asp-for="PasswordConfirm" />
            <span asp-validation-for="PasswordConfirm"></span>

            <button type="submit">Save</button>
        </form>
    </div>
</div>
