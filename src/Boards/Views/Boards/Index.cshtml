@{
    ViewBag.Title = $"{User.Identity.Name}'s Boards";
}
<div ng-controller="BoardsCtrl as boardsCtrl">
    <div class="wrap narrow">
        <div class="gencon">
            <h1>Hello, @User.Identity.Name</h1>
            <div id="list-pane">
                <h2>My Boards</h2>
                <button ng-click="boardsCtrl.newBoardClicked()"><i class="fa fa-plus"></i> New Board</button>
                <boards-list>
                    <p class="message">
                        <em><i class="fa fa-spinner fa-spin"></i> Loading Boards</em>
                    </p>
                </boards-list>
            </div>
        </div>
    </div>

    <div boards-modal
        modal-title="boardsCtrl.modalTitle"
        modal-active="boardsCtrl.modalActive"
        modal-method="boardsCtrl.modalMethod"
        ng-class="['modal', {'active':boardsCtrl.modalActive}]">
    </div>
</div>